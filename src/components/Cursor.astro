<div id="custom-cursor" class="hidden lg:block fixed top-0 left-0 w-16 h-16 pointer-events-none z-[9999] mix-blend-difference">
  <!-- Liquid Outer Ring -->
  <div class="cursor-main absolute inset-0 border border-accent/20 rounded-full scale-100 transition-transform duration-500 ease-out"></div>
  
  <!-- Stylized Breast Silhouette (Borst) -->
  <div class="cursor-inner absolute inset-0 flex items-center justify-center opacity-70">
    <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg" class="text-accent">
      <!-- Main curve -->
      <path d="M5 25C5 15 15 10 20 10C25 10 35 15 35 25" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
      <!-- Nipple detail -->
      <circle cx="20" cy="10" r="1.5" fill="currentColor" />
      <!-- Subtle shadow detail -->
      <path d="M12 28C12 28 15 24 20 24C25 24 28 28 28 28" stroke="currentColor" stroke-width="1" stroke-linecap="round" opacity="0.3" />
    </svg>
  </div>
</div>

<style>
  #custom-cursor {
    will-change: transform;
    transition: width 0.3s, height 0.3s;
  }
</style>

<script>
  function setupCursor() {
    const cursor = document.getElementById('custom-cursor');
    const main = cursor?.querySelector('.cursor-main');
    const inner = cursor?.querySelector('.cursor-inner');
    
    if (!cursor || !main || !inner) return;

    let posX = 0, posY = 0;
    let mouseX = 0, mouseY = 0;

    // Fluid lag for liquid feel
    const lag = 0.1;

    document.addEventListener('mousemove', (e) => {
      mouseX = e.clientX;
      mouseY = e.clientY;
    });

    function animate() {
      posX += (mouseX - posX) * lag;
      posY += (mouseY - posY) * lag;

      cursor.style.transform = `translate3d(${posX - 32}px, ${posY - 32}px, 0)`;
      requestAnimationFrame(animate);
    }

    animate();

    // Hover interactions
    const interactiveElements = document.querySelectorAll('a, button, input, .group');
    
    interactiveElements.forEach(el => {
      el.addEventListener('mouseenter', () => {
        main.style.transform = 'scale(1.5)';
        main.style.borderColor = 'rgba(44, 93, 99, 0.4)'; // ocean color
        inner.style.transform = 'scale(1.1) translateY(-2px)';
        inner.style.opacity = '1';
      });
      el.addEventListener('mouseleave', () => {
        main.style.transform = 'scale(1)';
        main.style.borderColor = 'rgba(212, 197, 179, 0.2)'; // accent color
        inner.style.transform = 'scale(1) translateY(0)';
        inner.style.opacity = '0.7';
      });
    });
  }

  // Initialize and support Astro View Transitions
  setupCursor();
  document.addEventListener('astro:page-load', setupCursor);
</script>
