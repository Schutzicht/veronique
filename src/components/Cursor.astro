<div id="custom-cursor" class="hidden lg:block fixed top-0 left-0 w-12 h-12 pointer-events-none z-[9999] mix-blend-difference">
  <!-- Liquid Outer Ring -->
  <div class="cursor-main absolute inset-0 border border-accent/30 rounded-full scale-100 transition-transform duration-500 ease-out"></div>
  
  <!-- Artistic Silhouette (Stylized Borst) -->
  <div class="cursor-inner absolute inset-0 flex items-center justify-center opacity-80">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="text-accent">
      <path d="M4 16C4 16 6 10 12 10C18 10 20 16 20 16" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
      <path d="M8 18C8 18 10 15 12 15C14 15 16 18 16 18" stroke="currentColor" stroke-width="1" stroke-linecap="round" opacity="0.5" />
    </svg>
  </div>
</div>

<style>
  #custom-cursor {
    will-change: transform;
    transition: width 0.3s, height 0.3s;
  }
</style>

<script>
  function setupCursor() {
    const cursor = document.getElementById('custom-cursor');
    const main = cursor?.querySelector('.cursor-main');
    const inner = cursor?.querySelector('.cursor-inner');
    
    if (!cursor || !main || !inner) return;

    let posX = 0, posY = 0;
    let mouseX = 0, mouseY = 0;

    // Fluid lag
    const lag = 0.12;

    document.addEventListener('mousemove', (e) => {
      mouseX = e.clientX;
      mouseY = e.clientY;
    });

    function animate() {
      posX += (mouseX - posX) * lag;
      posY += (mouseY - posY) * lag;

      cursor.style.transform = `translate3d(${posX - 24}px, ${posY - 24}px, 0)`;
      requestAnimationFrame(animate);
    }

    animate();

    // Hover interactions
    const interactiveElements = document.querySelectorAll('a, button, input, .group');
    
    interactiveElements.forEach(el => {
      el.addEventListener('mouseenter', () => {
        main.style.transform = 'scale(1.8)';
        main.style.borderColor = 'rgba(44, 93, 99, 0.5)'; // ocean color
        inner.style.transform = 'scale(1.2)';
      });
      el.addEventListener('mouseleave', () => {
        main.style.transform = 'scale(1)';
        main.style.borderColor = 'rgba(212, 197, 179, 0.3)'; // accent color
        inner.style.transform = 'scale(1)';
      });
    });
  }

  // Initialize and support Astro View Transitions
  setupCursor();
  document.addEventListener('astro:page-load', setupCursor);
</script>
